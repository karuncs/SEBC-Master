#### setup a repo for cloudera manager
wget https://archive.cloudera.com/cm5/redhat/7/x86_64/cm/cloudera-manager.repo -P /etc/yum.repos.d 

latest: https://archive.cloudera.com/cm6/6.0.1/redhat7/yum/cloudera-manager.repo
sudo rpm --import https://archive.cloudera.com/cm6/6.0.0/redhat7/yum/RPM-GPG-KEY-cloudera

#### Import the repository signing GPG key
rpm --import https://archive.cloudera.com/cdh5/redhat/7/x86_64/cdh/RPM-GPG-KEY-cloudera

chnage the version in cloudera-repo

sudo vi /etc/yum.repos.d/cloudera-manager.repo

[cloudera-manager]
# Packages for Cloudera Manager, Version 5, on RedHat or CentOS 7 x86_64
name=Cloudera Manager
baseurl=https://archive.cloudera.com/cm5/redhat/7/x86_64/cm/5.13.3/
gpgkey =https://archive.cloudera.com/cm5/redhat/7/x86_64/cm/RPM-GPG-KEY-cloudera
gpgcheck = 1


#### update
sudo yum -y update

#### install clouder manager server
yum install cloudera-manager-daemons cloudera-manager-server

#### Install CDh and other Softwares
#### start cloudera manager server
systemctl start cloudera-scm-server

systemctl status cloudera-scm-server

#### stop the service aganet
service cloudera-scm-agent stop
----
service cloudera-scm-agent start

